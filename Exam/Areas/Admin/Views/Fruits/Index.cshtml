@{
    ViewData["Title"] = "Admin Page";
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a asp-action="Create" class="btn btn-success">Create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>About</th>
                            <th>Image</th>
                            <th>Update</th>
                            <th>Delete</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model )
                        {
                            <tr>
                                <td>@item.Name </td>
                                <td>@item.About</td>
                                <td width="13%"><img style="width:90%" src="~/assets/CreatedImages/@item.ImageUrl"/> </td>
                                <td>
                                    <a asp-action="Update" asp-controller="Fruits" class="btn btn-warning">Update</a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-controller="Fruits" class="btn btn-danger">Delete</a>
                                </td>
                                
                                
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->